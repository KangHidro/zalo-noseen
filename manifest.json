{
  "name": "Zalo Hide-Me",
  "version": "3.0",
  "description": "Created for Zalo Web: No Seen/Typing/Delivered",
  "manifest_version": 3,
  "icons": {
    "16": "images/zalo.png",
    "32": "images/zalo.png",
    "48": "images/zalo.png",
    "128": "images/zalo.png"
  },
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*.chat.zalo.me/",
    "*://chat.zalo.me/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "block_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}